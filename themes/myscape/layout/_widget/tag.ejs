<% if (site.tags.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('tags') %></h3>
    <div class="widget">
      <%- list_tags({orderby: 'length', amount: 4, order: -1}) %>
      <a class="tag-list-link" href="<%- url_for('/tags/') %>">查看全部</a>
    </div>
  </div>
<% } %>
