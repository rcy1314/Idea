@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff2?v=" + font-icon-version) format("woff2"),
       url(font-icon-path + ".woff?v=" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg?v=" + font-icon-version + "#fontawesomeregular") format("svg")

html, body, #container
  height: 100%

body
  background: color-background
  font-size: 14px
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  margin: 0 auto
  padding: 0 gutter-width
  max-width: 1200px
  @media mq-wide
    max-width: none
    width: 75%

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background-color: #eee
  .mobile-nav-on &
    left: mobile-nav-width
  #main
    @media mq-normal
      column(main-column)

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"
@import "_partial/comment"
@import "_partial/sidebar"
  
@media mq-wide
  .article-inner
    padding: 20px

blockquote {
  color: #646464;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 0;
  padding-left: 15px;
  padding-right: 10px;
  border-left: 3px solid #ccc;
}

.tip {
	background: #eee;
	padding: 8px 20px;
	border-left: 3px solid #38a3fd;
	border-radius: 0 5px 5px 0;
	margin-bottom: 10px;
}

.tip p {
	margin: 5px 0!important
}

.tip:before {
	background: #38a3fd;
	border-radius: 50%;
	color: #fff;
	content: "i";
	font-family: Dosis,"Source Sans Pro","Helvetica Neue",Arial,sans-serif;
	font-size: 16px;
	height: 21px;
	line-height: 21px;
	margin-left: -32px;
	position: absolute;
	text-align: center;
	width: 21px;
}

.tip ol {
	margin: 0
}

.tip.share {
	border-left-color: #ddd;
}

.tip.share:before {
	background: #ddd;
	content: "\0040";
}

.tip.success {
	border-left-color: #86cc00;
}

.tip.success:before {
	background: #86cc00;
	content: "\221a"
}

.tip.warning {
	border-left-color: #ff7800;
}

.tip.warning:before {
	background: #ff7800;
	content: "\0021"
}

.tip.error {
	border-left-color: #ed0000;
}

.tip.error:before {
	background: #ed0000;
	content: "\00D7"
}

@import "_partial/dark-theme"
